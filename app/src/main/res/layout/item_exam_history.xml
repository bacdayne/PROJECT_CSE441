<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/option_background">

        <TextView
            android:id="@+id/tvExamNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đề số 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvCompletionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: 01-01-2023 12:00:00"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm: 8.5"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvTotalCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu đúng: 34"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xóa lịch sử" />

    </LinearLayout>
</androidx.cardview.widget.CardView>