<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#EDDA36" /> <!-- Màu vàng khi được chọn -->
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="1dp"
                android:color="#0288D1" /> <!-- Viền xanh lam -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#0288D1" /> <!-- Màu xanh lam mặc định -->
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" /> <!-- Viền trắng -->
        </shape>
    </item>
</selector>